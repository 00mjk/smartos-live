. /lib/svc/share/smf_include.sh

# Since the contents of /etc/zones is persistent and setup at install
# time, we regenerate the persistent global zone settings each time
# so we track changes in the latest platform.
cat <<-DONE >/etc/zones/global.xml
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE zone PUBLIC "-//Sun Microsystems Inc//DTD Zones//EN" "file:///usr/share/lib/xml/dtd/zonecfg.dtd.1">
<!--
    DO NOT EDIT THIS FILE. See /lib/svc/method/svc-resource-mgmt
-->
<zone name="global" zonepath="/" autoboot="true" brand="joyent">
  <rctl name="zone.cpu-shares">
    <rctl-value priv="privileged" limit="65535" action="none"/>
  </rctl>
</zone>
DONE
chmod 644 /etc/zones/global.xml

# Make sure working directory is / to prevent unmounting problems.
cd /
PATH=/usr/sbin:/usr/bin; export PATH

case "$1" in
'start')
	zoneadm -z global apply
	if [ $? -ne 0 ]; then
                exit $SMF_EXIT_ERR_FATAL
        fi
	;;

*)
	echo "Usage: $0 start"
	exit $SMF_EXIT_ERR_FATAL
	;;
esac
exit $SMF_EXIT_OK
